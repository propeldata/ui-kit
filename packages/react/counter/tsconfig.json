{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "target": "es2016",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/testing/*": ["testing/*"],
      "@/testing": ["testing"],
      "@/counter": ["src"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "./jest.config.js", "./jest.setup.js"],
  "exclude": ["node_modules"]
}
